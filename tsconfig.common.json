{
  "extends": "@spotify/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2018", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "sourceMap": true,
    "stripInternal": false,
    "jsx": "react",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "removeComments": false
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
